mixin accordion-menu(text, arr)
  ul.accordion-menu
    .accordion-menu__contener
      .accordion-menu__arrow
      li.dropdownlink #{text}
        
      - if(Array.isArray(arr))
        ul.submenuItems
          - for (var i = 0; i < arr.length; i++)
            li
              a(href="#") #{arr[i]}